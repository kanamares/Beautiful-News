<?xml version="1.0" encoding="utf-8"?>
<resources>


	<style name="PhotoFrame">
		<item name="android:padding">10dp</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:background">@drawable/gradient_black</item>
	</style>

	<style name="PhotoCaption">
		<item name="android:textColor">@color/grey_50</item>
		<item name="android:textSize">20dp</item>
		<item name="android:shadowColor">@color/grey_900</item>
		<item name="android:shadowDx">3</item>
		<item name="android:shadowDy">3</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="PhotoThumbnail">
		<item name="android:layout_height">200dp</item>
		<item name="android:scaleType">centerCrop</item>
		<item name="android:adjustViewBounds">true</item>
	</style>

	<style name="EmptyTextMessage">
		<item name="android:textSize">30dp</item>
		<item name="android:textStyle">italic</item>
		<item name="android:textColor">@color/cyan_500</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
	</style>

	<style name="NewsElement">
		<item name="android:layout_marginLeft">14dp</item>
		<item name="android:layout_marginRight">14dp</item>
		<item name="android:layout_marginTop">14dp</item>
	</style>

	<style name="NewsElement.Titular">
		<item name="android:textSize">22dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">14dp</item>
		<item name="android:layout_marginTop">0dp</item>
		<item name="android:layout_marginRight">0dp</item>
		<item name="android:layout_marginLeft">0dp</item>
		<item name="android:textColor">@color/grey_50</item>
	</style>

	<style name="NewsElement.Entradilla">
		<item name="android:textSize">18dp</item>
		<item name="android:textColor">@color/grey_700</item>
	</style>

	<style name="NewsElement.Autor">
		<item name="android:textSize">14dp</item>
		<item name="android:textColor">@color/grey_500</item>
	</style>

	<style name="NewsElement.WebBody">

	</style>

	<style name="DrawerItem">
		<item name="android:textSize">18dp</item>
		<item name="android:padding">10dp</item>
		<item name="android:textColor">@color/grey_700</item>
	</style>
</resources>