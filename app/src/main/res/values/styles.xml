<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Theme.BeautifulPhotos" parent="@style/Theme.AppCompat.Light">
		<item name="android:actionBarStyle">@style/Theme.BeautifulPhotos.ActionbarStyle</item>
		<item name="android:icon">@drawable/ic_launcher</item>
		<item name="android:typeface">serif</item>
		<item name="android:windowBackground">@color/grey_400</item>
		<item name="icon">@drawable/ic_launcher</item>
		<item name="android:windowNoTitle">false</item>
	</style>


	<style name="Theme.BeautifulPhotos.ActionbarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
		<item name="android:background">@color/grey_600</item>
		<item name="android:icon">@android:color/transparent</item>
		<item name="android:windowActionBarOverlay">true</item>
		<item name="android:titleTextStyle">@style/Theme.BeautifulPhotos.TitleTextStyleLight</item>
		<item name="windowActionBarOverlay">true</item>

	</style>

	<style name="Theme.BeautifulPhotos.TitleTextStyleLight" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textColor">@color/actionbar_title_text_color_light</item>

	</style>

	<style name="PhotoCaption">
		<item name="android:textColor">@color/grey_400</item>
		<item name="android:textSize">26dp</item>
		<item name="android:shadowColor">@color/grey_900</item>
		<item name="android:shadowDx">3</item>
		<item name="android:shadowDy">3</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:gravity">center_vertical</item>

	</style>

	<style name="PhotoThumbnail">
		<item name="android:scaleType">centerCrop</item>
		<item name="android:adjustViewBounds">true</item>
	</style>

	<style name="EmptyTextMessage">
		<item name="android:textSize">30dp</item>
		<item name="android:textStyle">italic</item>
		<item name="android:textColor">@color/cyan_500</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
	</style>

	<style name="NewsElement">
		<item name="android:layout_marginLeft">15dp</item>
		<item name="android:layout_marginRight">15dp</item>
		<item name="android:layout_marginTop">15dp</item>
	</style>

	<style name="NewsElement.Titular">
		<item name="android:textSize">22dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_marginTop">25dp</item>
		<item name="android:textColor">@color/grey_700</item>
	</style>

	<style name="NewsElement.Entradilla">
		<item name="android:textSize">18dp</item>
		<item name="android:textColor">@color/grey_700</item>
	</style>

	<style name="NewsElement.Autor">
		<item name="android:textSize">14dp</item>
		<item name="android:textColor">@color/grey_500</item>
	</style>

	<style name="NewsElement.WebBody">

	</style>
</resources>